{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug VulkanApp",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/VulkanApp.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "VK_LAYER_PATH",
                    "value": "C:/VulkanSDK/1.3.250.1/Bin"
                },
                {
                    "name": "PATH",
                    "value": "C:/VulkanSDK/1.3.250.1/Bin;${env:PATH}"
                }
            ],
            "console": "externalTerminal",
            "logging": {
                "moduleLoad": true,
                "engineLogging": true
            },
            "symbolSearchPath": "${workspaceFolder}/build/Debug",
            "visualizerFile": "${workspaceFolder}/build/Debug/VulkanApp.natvis"
        }
    ]
}